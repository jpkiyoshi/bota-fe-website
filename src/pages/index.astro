---
import Layout from '../layouts/Layout.astro';
import logo from '../images/logo-bota-fe.png';
import EmailForm from '../components/EmailForm';
import CountdownTimer from '../components/CountdownTimer.astro';
import { Icon } from 'astro-icon';
---

<Layout title='Programa Bota Fé'>
	<main role='main'>
		<header role='banner' class='main-content'>
			<img class='logo' src={logo} alt='Logo Bota Fé' />
			<h1 class='cta-title'>Estamos chegando!</h1>
			<p class='cta-description'>O programa que vai <span>mudar</span> sua vida.</p>
		</header>
		<CountdownTimer />
		<EmailForm client:load />
		<a href='https://www.instagram.com' class='icon-link'>
			<Icon href='https://www.instagram.com' name='mdi:instagram' /></a
		>
	</main>
</Layout>

<style>
	main {
		background-color: black;
		background-image: url('../images/hero-background.png');
		background-position: center;
		background-size: cover;
		height: 100dvh;
		display: flex;
		flex-direction: column;
		justify-content: space-between;
	}

	.main-content {
		display: flex;
		flex-direction: column;
		align-items: center;
	}

	.logo {
		width: 200px;
		filter: drop-shadow(0 5px 15px rgba(0, 0, 0, 0.6));
		transform: translatey(30px);
		animation: float 2s ease-in-out infinite;
	}

	.cta-title {
		font-family: 'Passion One', sans-serif;
		font-size: 3rem;
		font-size: clamp(3rem, 2.428571428571429rem + 2.857142857142857vw, 5rem);
		margin-block-start: 50px;
		text-transform: uppercase;
		text-align: center;
		text-shadow: 2.8px 2.8px 2.2px rgba(0, 0, 0, 0.02),
			6.7px 6.7px 5.3px rgba(0, 0, 0, 0.028),
			12.5px 12.5px 10px rgba(0, 0, 0, 0.035),
			22.3px 22.3px 17.9px rgba(0, 0, 0, 0.042),
			41.8px 41.8px 33.4px rgba(0, 0, 0, 0.05), 100px 100px 80px rgba(0, 0, 0, 0.07);
		color: var(--neutral-100);
		line-height: 0.9;
	}

	.cta-description {
		font-size: 1.5rem;
		text-align: center;
		max-width: 80ch;
		color: var(--neutral-200);
	}

	.cta-description span {
		font-weight: 700;
		color: var(--primary-500);
		text-transform: uppercase;
	}

	.icon-link {
		color: var(--neutral-100);
		margin-inline: auto;
	}

	.icon-link:hover {
		color: var(--primary-300);
	}

	[astro-icon] {
		width: 25px;
	}

	@keyframes float {
		0% {
			filter: drop-shadow(0 5px 15px rgba(0, 0, 0, 0.6));
			transform: translatey(30px);
		}
		50% {
			filter: drop-shadow(0 25px 15px rgba(0, 0, 0, 0.2));
			transform: translatey(10px);
		}
		100% {
			filter: drop-shadow(0 5px 15px rgba(0, 0, 0, 0.6));
			transform: translatey(30px);
		}
	}

	@media screen and (max-width: 520px) {
		.logo {
			width: 120px;
		}

		.cta-description {
			font-size: 1.2rem;
		}
	}
</style>
